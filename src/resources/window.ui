<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="TweakerWindow" parent="GtkApplicationWindow">
    <property name="title" translatable="yes">Tweaker</property>
    <property name="default-width">600</property>
    <property name="default-height">400</property>
    <property name="titlebar">
      <object class="GtkHeaderBar"/>
    </property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkPicture" id="picture"/>
        </child>
        <child>
          <object class="GtkButton">
            <property name="label" translatable="yes">Включить RTX</property>
            <property name="margin-top">12</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
          </object>
        </child>
        <child>
          <object class="GtkButton">
            <property name="label" translatable="yes">Оптимизировать pacman</property>
            <property name="margin-top">6</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
          </object>
        </child>
        <child>
          <object class="GtkButton">
            <property name="label" translatable="yes">Заблокировать Яшу</property>
            <property name="margin-top">6</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
          </object>
        </child>
        <child>
          <object class="GtkButton">
            <property name="label" translatable="yes">Заблокировать Макса</property>
            <property name="margin-top">6</property>
            <property name="margin-bottom">12</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
